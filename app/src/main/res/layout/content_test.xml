<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">
    <com.lxf.processcircle.view.UpRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">
        <com.lxf.processcircle.view.MainProgressCircleView
            android:id="@+id/mainCircle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingTop="20dp"
            app:CircleDiameter="200dp"/>
        <com.lxf.processcircle.view.DynamicWave
            android:id="@+id/mainWave"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/mainCircle"/>
        <TextView
            android:id="@+id/mainNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/mainWave"
            android:text="luo"
            android:textSize="40sp"
            android:textColor="@android:color/white"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mainWave"/>

    </com.lxf.processcircle.view.UpRelativeLayout>
</RelativeLayout>
